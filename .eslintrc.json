{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "root": true,
  "parser": "babel-eslint",
  "rules": {
    "arrow-body-style": "error",
    "comma-dangle": ["warn", "always-multiline"],
    "indent": ["warn", "tab"],
    "no-console": "off",
    "no-useless-computed-key": "error",
    "no-useless-concat": "error",
    "prefer-arrow-callback": "error",
    "quotes": ["warn", "single"],
    "space-unary-ops": ["warn", { "overrides": { "!": true } }]
  }
}
