{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2017",
      "ES2018.AsyncIterable",
      "ES2018.Intl",
      "ES2018.Promise",
      "ES2019.Array",
      "ES2019.Object",
      "ES2019.String",
      "ES2019.Symbol"
    ],
    "allowJs": true,
    "module": "commonjs",
    "jsx": "react",
    "jsxFactory": "preact.h",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true
  },
  "exclude": ["dist"]
}
